<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".insurance_details">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#d3d3d3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:text="Insurance Details"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp">

                </TextView>
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Policy Number :"
                android:layout_marginLeft="25dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:layout_marginTop="10dp">
            </TextView>

            <EditText
                android:id="@+id/policy_no"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Policy Number"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Company Name :"
                android:layout_marginLeft="25dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:layout_marginTop="10dp">
            </TextView>

            <EditText
                android:id="@+id/company_name"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Company Name"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Insurance Start Date :"
                android:layout_marginLeft="25dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:layout_marginTop="10dp">
            </TextView>
            <EditText
                android:id="@+id/start_date"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Insusrance Start Date"
                android:layout_gravity="center"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Symptoms :"
                android:layout_marginLeft="25dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:layout_marginTop="10dp">
            </TextView>

            <EditText
                android:id="@+id/end_date"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Expiration Date"
                android:layout_gravity="center"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Policy Amount :"
                android:layout_marginLeft="25dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
               >
            </TextView>

            <EditText
                android:id="@+id/policy_amount"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Policy Amount"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Premium Amount :"
                android:layout_marginLeft="25dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:layout_marginTop="10dp">
            </TextView>


            <EditText
                android:id="@+id/premium_amount"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Premioum Amount"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Short Description :"
                android:layout_marginLeft="25dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:layout_marginTop="10dp">
            </TextView>

            <EditText
                android:id="@+id/short_description"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Short Description"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/btn_save_app"
                android:layout_width="180dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="Save"
                android:textColor="@android:color/white"
                android:textSize="18dp" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>