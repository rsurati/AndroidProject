<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Overview">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#d3d3d3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:text="Personal Information"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp">
                </TextView>
            </FrameLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:text="Date Of Birth : "
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/p_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginLeft="155dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:text="Gender : "
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/p_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginLeft="155dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:text="Blood Group : "
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/p_bloodgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginLeft="155dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:text="Nationality : "
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/p_nationality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginLeft="155dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:text="Relationship : "
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/p_relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginLeft="155dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:text="Addresss : "
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/p_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginLeft="155dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:text="Mobile No : "
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/p_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginLeft="155dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:text="Email : "
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/p_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginLeft="155dp"
                android:layout_marginBottom="20dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>